# Images directory (for uploaded images - not static assets)
IMAGES_PATH=./data/images

# Server configuration
PORT=8547
HOST=0.0.0.0

# Body size limit in bytes (for bulk image uploads)
# Default is 100MB (104857600 bytes)
# Increase this if you need to upload larger images
# Note: This setting must be set BEFORE building the application
BODY_SIZE_LIMIT=104857600

# Prisma database URL (SQLite)
DATABASE_URL="file:./data/crops.db"

# Legacy database path (for compatibility)
DB_PATH=./data/crops.db

# Site password (leave empty to disable password protection)
# Example: SITE_PASSWORD=mysecurepassword
SITE_PASSWORD=

# API tokens for external access (single token or comma-separated)
# Example: API_TOKENS=your-secret-token-here
# Example (multiple): API_TOKENS=token1,token2,token3
API_TOKENS=

